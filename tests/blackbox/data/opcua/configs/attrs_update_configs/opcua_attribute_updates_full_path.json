{
  "Opcua": {
    "name": "Opcua",
    "type": "OPCUA",
    "logLevel": "DEBUG",
    "configuration": "opcua.json",
    "configurationJson": {
      "server": {
        "url": "opc.tcp://localhost:4840/freeopcua/server/",
        "timeoutInMillis": 5000,
        "scanPeriodInMillis": 3600000,
        "pollPeriodInMillis": 5000,
        "enableSubscriptions": true,
        "subCheckPeriodInMillis": 100,
        "showMap": false,
        "security": "Basic128Rsa15",
        "identity": {
          "type": "anonymous"
        }
      },
      "mapping": [
        {
          "deviceNodeSource": "path",
          "deviceNodePattern": "Root\\.Objects\\.TempSensor",
          "deviceInfo": {
            "deviceNameExpression": "Temp Sensor",
            "deviceNameExpressionSource": "constant",
            "deviceProfileExpression": "default",
            "deviceProfileExpressionSource": "constant"
          },
          "attributes": [
          ],
          "timeseries": [
            {
              "key": "Pressure",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.Pressure}"
            },
            {
              "key": "SomeText",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.SomeText}"
            },
            {
              "key": "Alarm",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.Alarm}"
            },
            {
              "key": "MyNodeId",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.MyNodeId}"
            }
          ],
          "rpc_methods": [],
          "attributes_updates": [
            {
              "key": "Pressure",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.Pressure}"
            },
            {
              "key": "Alarm",
              "type": "path",
              "value": "${Root\\.Objects\\.TempSensor\\.Alarm}"
            }
          ]
        }
      ]
    }
  }
}
